<% if current_announcement %>
  <div data-alert class="alert-box" id="starburst-announcement">
    <p><%= current_announcement.body.html_safe %></p>
    <%= link_to "&times;".html_safe, starburst.mark_as_read_path(current_announcement.id), method: :post, remote: true, class: 'close', id: 'starburst-close' %>
  </div>
<% end %>
